<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="10" id="com.sc" ios-CFBundleVersion="11" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CFFramework</name>
    <description>
        Framwork for SC Consumer Finance
    </description>
    <author email="zhuangyinping@gmail.com">
        John Zhuang
    </author>
    <preference name="LogLevel" value="DEBUG" />   
    <preference name="target-device" value="handset" />
    <preference name="deployment-target" value="8.4" />
    <preference name="android-minSdkVersion" value="19" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-device" spec="~1.1.3" />
    <plugin name="cordova-plugin-camera" spec="~2.3.0">
        <variable name="CAMERA_USAGE_DESCRIPTION" value=" " />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value=" " />
    </plugin>
    <plugin name="cordova-plugin-geolocation" spec="~2.4.0" />
    <plugin name="cordova-plugin-contacts" spec="~2.2.0">
        <variable name="CONTACTS_USAGE_DESCRIPTION" value=" " />
    </plugin>
    <engine name="browser" spec="~4.1.0" />
    <engine name="android" spec="~6.1.2" />
    <engine name="ios" spec="~4.3.1" />
</widget>
